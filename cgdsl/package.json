{
  "name": "cgdsl",
  "displayName": "cgdsl-lsp",
  "description": "Support for cgdsl (Card Game DSL)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "cgdsl",
      "aliases": ["CGDSL", "cgdsl"],
      "extensions": [".cgdsl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "cgdsl",
      "scopeName": "source.cgdsl",
      "path": "./syntaxes/cgdsl.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}