{
  "name": "cgdsl",
  "displayName": "cgdsl-lsp",
  "description": "Support for cgdsl (Card Game DSL)",
  "version": "0.0.1",
  "license": "MIT OR Apache-2.0",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "configurationDefaults": {
    "[cgdsl]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "cgdsl",
      "aliases": ["CGDSL", "cgdsl"],
      "extensions": [".cgdsl"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./icons/cgdsl-light-icon.svg",
        "dark": "./icons/cgdsl-dark-icon.svg"
      }
    }],
    "themes": [
      {
        "label": "CGDSL Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/cgdsl-dark.json"
      }
    ],
    "commands": [
      {
        "command": "cgdsl.runFile",
        "title": "Run CGDSL File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cgdsl.runFile",
          "when": "editorLangId == cgdsl",
          "group": "navigation@1"
        }
      ]
    },
    "grammars": [{
      "language": "cgdsl",
      "scopeName": "source.cgdsl",
      "path": "./syntaxes/cgdsl.tmLanguage.json"
    }],
    "semanticTokenTypes": [
      { "id": "player", "description": "Game player entity" },
      { "id": "team", "description": "Team identifier" },
      { "id": "location", "description": "Map coordinate" },
      { "id": "precedence", "description": "Priority level" },
      { "id": "pointmap", "description": "Point mapping" },
      { "id": "combo", "description": "Combo sequence" },
      { "id": "key", "description": "Map key" },
      { "id": "value", "description": "Map value" },
      { "id": "memory", "description": "Memory address" },
      { "id": "token", "description": "Generic token" },
      { "id": "stage", "description": "Game stage" },
      { "id": "notype", "description": "Fallback type" }
    ]
  },
  "scripts": {
    "generate-grammar": "npx ts-node ./src/generate-grammar.ts",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run generate-grammar && tsc -p ./",
    "watch": "npm run generate-grammar && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
